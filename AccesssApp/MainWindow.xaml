<Window x:Class="AccesssApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AccesssApp"
        mc:Ignorable="d"
        Title="Sample Form" Height="450" Width="800">

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Page">
                <MenuItem Header="_Add New Product" Click="MenuItem_Click_Add"/>
                <MenuItem Header="_List Add Product" Click="MenuItem_Click_List" />
                <Separator />
                <MenuItem Header="_Exit" Click="MenuItem_Click_Exit" />
            </MenuItem>
        </Menu>
        <Frame x:Name="Main" NavigationUIVisibility="Hidden"/>
    </DockPanel>
</Window>
